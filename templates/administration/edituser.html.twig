{% extends 'administration/index.html.twig' %}

{% block container %}
  <h1>
    Modifier un utilisateur
  </h1>
  {{ form(userForm) }}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script>
    $('.custom-file-input').on('change', function(event) { var inputFile =
    event.currentTarget; $(inputFile).parent() .find('.custom-file-label')
    .html(inputFile.files[0].name); });
  </script>
{% endblock %}
