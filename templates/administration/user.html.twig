{% extends 'administration/index.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="/css/admin_user.css" />
{% endblock %}

{% block container %}
  {{ parent() }}
  <div class="my-3 p-3 bg-white rounded box-shadow text-left">
    {% for message in app.flashes('success') %}
      <div class="alert alert-success">
        {{ message }}
      </div>
    {% endfor %}
    {% for message in app.flashes('warning') %}
      <div class="alert alert-warning">
        {{ message }}
      </div>
    {% endfor %}
    <div class="table-wrapper">
      <div class="table-title">
        <div class="row">
          <div class="col-sm-5">
            <h2>
              {{ 'Users'|trans }}
            </h2>
          </div>
        </div>
      </div>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>
              {{ 'User'|trans }}
            </th>
            <th>
              {{ 'Email'|trans }} mail
            </th>
            <th>
              {{ 'Roles'|trans }}
            </th>
            <th>
              {{ 'Last connection'|trans }}
            </th>
            <th>
              {{ 'Actions'|trans }}
            </th>
          </tr>
        </thead>
        <tbody>
          {% for user in users %}
            <tr>
              <td class="username">
                <img src="{{
                  user.avatar == 'default.png'
                    ? asset('images/logos/' ~ user.avatar)
                    : asset('uploads/avatar/' ~ user.avatar)
                  }}"
                  class="avatar"
                  alt="{{ 'Avatar'|trans }}" />
                {{ user.username|capitalize }}
              </td>
              <td>
                {{ user.email }}
              </td>
              <td>
                {% for role in user.roles %}
                  <span class="role {{ role }}">
                    {% if role == 'ROLE_ADMIN' %}
                      {{ 'Administrator'|trans }}
                    {% elseif role == 'ROLE_USER' %}
                      {{ 'User'|trans }}
                    {% endif %}
                  </span>
                {% endfor %}
              </td>
              <td>
                {{ user.lastLogin
                  ? user.lastLogin|format_datetime('medium', locale = app.request.getLocale())
                  : '-' }}
              </td>
              <td>
                <a href="{{
                  path(
                    'admin_edit_user',
                    {
                      id: user.id
                    }
                  )
                  }}"
                  class="settings"
                  title="{{ 'Modify'|trans }}"
                  data-toggle="tooltip">
                  <i class="fas fa-cog"></i>
                </a>
                <a href="{{
                  path(
                    'admin_delete_user',
                    {
                      id: user.id
                    }
                  )
                  }}"
                  class="delete"
                  title="{{ 'Delete'|trans }}"
                  data-toggle="tooltip"
                  onclick="return confirm('{{ 'Are you sure you want to delete this user?'|trans }}')">
                  <i class="fas fa-times-circle"></i>
                </a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>

      <div class="pagination justify-content-center">
        {{ knp_pagination_render(users) }}
      </div>
    </div>
  </div>
{% endblock %}
